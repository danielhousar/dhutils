INCLUDEDIR=$(PREFIX)/include
SYSCONFDIR=/etc

CC=gcc
CFLAGS=-march=native -mtune=native -O3 -Wall
INCLUDES=
DEFS=
LIBDEFS=
LDFLAGS=

E = @echo
Q = @

OUTOBJDIR=../.out
OBJ-OUTDIR=../.out
OUTBINDIR=../.bin
BIN-OUTDIR=../.bin
OUTLIBDIR=../.lib

# HERE you can modify, what will be built
SUBDIRS=libdh quadequi datatypes portping initmount init

# LIBDH
LIBDHPARTS=math str misc memset fun

LIBDHOBJS=$(OUTOBJDIR)/math.o \
	$(OUTOBJDIR)/str.o \
	$(OUTOBJDIR)/misc.o \
	$(OUTOBJDIR)/memset.o \
	$(OUTOBJDIR)/fun.o

# INIT

INITOBJS=../.out/init.o \
		../.out/utmp.o

INITCFLAGS=$(CFLAGS) -fomit-frame-pointer
INITDEFS=-D_GNU_SOURCE
